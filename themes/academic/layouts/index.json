[
    {{ range $index, $page := .Site.Pages  }}
        {{ if $index }},{{- end -}}
            {
                "id": "{{ $index }}",
                "href": "{{ $page.Permalink }}",
                "title": "{{ htmlEscape $page.Title }}",
                "categories": [{{ range $tindex, $tag := $page.Params.categories }}{{ if $tindex }}, {{ end }}"{{ $tag| htmlEscape }}"{{ end }}],
                "content": {{$page.Plain | jsonify}}
            }
    {{- end -}}
]